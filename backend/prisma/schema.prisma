// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Address {
  id               Int       @id @default(autoincrement())
  country          String?   @default("Poland")
  city             String
  postalCode       String
  street           String
  buildingNumber   String
  apartmentNumber  String?
  employees        Employee[]
}

model Employee {
  id            Int           @id @default(autoincrement())
  firstName     String
  lastName      String
  birthDate     DateTime
  socialNumber  String
  phoneNumber   String
  email         String
  bankAccount   String
  jobStart      DateTime
  salaryRate    Decimal
  position      String?
  contractType  String?
  addressId     Int?
  address       Address?      @relation(fields: [addressId], references: [id])
}
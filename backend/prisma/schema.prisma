// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Address {
  id               Int       @id @default(autoincrement())
  country          String?   @default("Poland")
  city             String
  postalCode       String
  street           String
  buildingNumber   String
  apartmentNumber  String?
  employees        Employee[]
}

model Employee {
  id            Int           @id @default(autoincrement())
  firstName     String
  lastName      String
  birthDate     DateTime
  socialNumber  String
  phoneNumber   String
  email         String
  bankAccount   String
  jobStart      DateTime
  salaryRate    Decimal
  position      String?
  contractType  String?
  addressId     Int?
  address       Address?      @relation(fields: [addressId], references: [id])
  documents     EmployeeDocument[]
  loginCodes    LoginCode[]
}

model Admin {
  id            Int           @id @default(autoincrement())
  login         String        @unique
  password      String
  phoneNumber   String        @unique
  hostDevices  HostDevice[]
}

model AllowedPhones {
  id            Int           @id @default(autoincrement())
  number        String        @unique
}

model EmployeeDocument {
  id            Int           @id @default(autoincrement())
  employeeId    Int
  employee      Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  fileName      String
  storedName    String
  filePath      String
  mimeType      String
  size          Int
  uploadedAt    DateTime      @default(now())
}

model LoginCode {
  id          Int         @id @default(autoincrement())
  codeHash    String
  expiresAt   DateTime
  usedAt      DateTime?
  employeeId  Int
  employee    Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
    createdAt   DateTime @default(now())
  }

model HostDevice {
  id            Int       @id @default(autoincrement())
  deviceName    String?
  deviceCode    String    @unique
  isActive      Boolean   @default(true)
  createdById   Int
  createdBy     Admin     @relation(fields: [createdById], references: [id])
  createdAt     DateTime  @default(now())
  activatedAt   DateTime?
  revokedAt     DateTime?
  lastUsedAt    DateTime?
}
